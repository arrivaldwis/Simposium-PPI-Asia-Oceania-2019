<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="12dp"
        android:background="#fff">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <com.pixplicity.fontview.FontAppCompatTextView
                android:id="@+id/tv_nama"
                style="@style/FontTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Denny Sumargo"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <com.pixplicity.fontview.FontAppCompatTextView
                android:id="@+id/tv_passport"
                style="@style/FontTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No.Passport: B4766917"
                android:textColor="@color/secondaryTextColor"
                android:textSize="14sp" />

            <com.pixplicity.fontview.FontAppCompatTextView
                android:id="@+id/tv_kota"
                style="@style/FontTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asal: Beijing, China"
                android:textColor="@color/secondaryTextColor"
                android:textSize="14sp" />
        </LinearLayout>

        <com.pixplicity.fontview.FontAppCompatTextView
            android:id="@+id/btn_approve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/border_rounded"
            android:text="Approve"
            android:textColor="@color/colorAccent" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_bukti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:padding="4dp">

        <com.pixplicity.fontview.FontAppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lihat Bukti Transfer"
            android:textColor="#fff"
            android:textStyle="bold" />
    </LinearLayout>

    <net.cachapa.expandablelayout.ExpandableLayout
        android:id="@+id/expandable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:el_duration="500"
        app:el_expanded="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical"
            android:padding="8dp">
            <ImageView
                android:id="@+id/img_bukti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </net.cachapa.expandablelayout.ExpandableLayout>
</LinearLayout>